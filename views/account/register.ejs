<h1 id="inv-title">
    <%= title %>
</h1>

<div id="registerContainer">
    <form action="/account/register" method="post" id="registerForm">
        <div>
            <label for="account_firstname">First Name</label>
            <input type="firstName" id="firstName" name="account_firstname" required "<%= locals.account_firstname %>" />
        </div>
        <div>
            <label for="account_lastname">Last Name</label>
            <input type="lastName" id="lastName" name="account_lastname" required "<%= locals.account_lastname %>" />
        </div>
        <div>
            <label for="account_email">Email address</label>
            <input type="email" id="email" name="account_email" required "<%= locals.account_email%>" />
        </div>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" />
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        </div>
        <button type="submit">Register</button>
    </form>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

</div>
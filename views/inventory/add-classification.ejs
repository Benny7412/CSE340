<h1 id="inv-title">
    <%= title %>
</h1>
<%- messages() %>
    <form id="add-classification-form" action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name</label>
        <input type="text" id="classification_name" name="classification_name" pattern="^[A-Za-z]+$" required value="<%= typeof classification_name != 'undefined' ? classification_name : '' %>" />
        <p>The classification name may not contain spaces or special characters.</p>
        <button type="submit">Add Classification</button>
    </form>
    <% if(errors){ %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>